<%= form_for(patient) do |f| %>
  <% if patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
      <% patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container">
<form>
  <br>
  <div class="form-group row">
    <%= f.label :fullname, class: 'col-sm-2 form-control-label' %>
  <div class="col-sm-4">
    <%= f.text_field :fullname, class: 'form-control', placeholder:'Enter Fullname' %>
  </div>
  </div>

  <div class="form-group row">
  <%= f.label :birthdate, class: 'col-sm-2 form-control-label' %>
  <div class="col-sm-4">
    <%= f.text_field :birthdate, class: 'form-control', type: 'date', value: '06-12-1991'%>
  </div>
  </div>

  <div class="form-group row">
    <%= f.label :telephone, class: 'col-sm-2 form-control-label' %>
  <div class="col-sm-4">
    <%= f.text_field :telephone, class: 'form-control', placeholder:'Enter phone number' %>
  </div>
  </div>

  <div class="form-group row">
    <%= f.label :address, class: 'col-sm-2 form-control-label' %>
  <div class="col-sm-4">
    <%= f.text_area :address, class: 'form-control', placeholder:'Enter Address' %>
  </div>
  </div>

  <div class="form-group row">
    <%= f.label :infection, class: 'col-sm-2 form-control-label' %>
  <div class="col-sm-4">
    <%= f.text_area :infection, class: 'form-control', placeholder:'Infection?' %>
  </div>
  </div>

  <div class="form-group row">
    <%= f.label :injury, class: 'col-sm-2 form-control-label' %>
  <div class="col-sm-4">
    <%= f.text_area :injury, class: 'form-control', placeholder:'Injury?' %>
  </div>
  </div>

  <div class="form-group row">
    <%= f.label :observations, class: 'col-sm-2 form-control-label' %>
  <div class="col-sm-4">
    <%= f.text_area :observations, class: 'form-control', placeholder:'Observations?' %>
  </div>
  </div>

  <div class="form-group row">
    <%= f.label :cost, 'Appointment Cost', class: 'col-sm-2 form-control-label' %>
  <div class="col-sm-4">
    <%= f.text_field :cost, class: 'form-control', placeholder:'Enter Appointment Cost' %>
  </div>
  </div>

  <h2>Further Consultations</h2>

  <div class="form-group row">
      <label class="col-sm-2">Xray</label>
      <div class="col-sm-10">
        <div class="form-check">
            <%= check_box_tag 'patient[xray]', 'xray' %>
        </div>
      </div>
  </div>
  <div class="form-group row">
      <label class="col-sm-2">MRI</label>
      <div class="col-sm-10">
        <div class="form-check">
            <%= check_box_tag 'patient[mri]', 'mri' %>
        </div>
      </div>
  </div>
  <div class="form-group row">
      <label class="col-sm-2">CAT Scan</label>
      <div class="col-sm-10">
        <div class="form-check">
          <%= check_box_tag 'patient[cat]', 'cat' %>
        </div>
      </div>
  </div>
  <div class="form-group row">
      <label class="col-sm-2">Blood Test</label>
      <div class="col-sm-10">
        <div class="form-check">
            <%= check_box_tag 'patient[bloods]', 'bloods' %>
        </div>
      </div>
  </div>

  <div class="form-group row">
    <%= f.label :requests, class: 'col-sm-2 form-control-label' %>
  <div class="col-sm-4">
    <%= f.text_area :requests, class: 'form-control', placeholder:'Please Leave blank' %>
  </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <%= link_to 'Back', patients_path, class: "btn btn-success-outline" %>
      <%= link_to 'View', @patient, class: "btn btn-success" %>
      <%= f.submit 'Submit', class: 'btn btn-primary align' %>
    </div>
  </div>
</form>
</div>
<% end %>
