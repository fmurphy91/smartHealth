
<%= form_tag(doctors_path, :method => "get", class: "form-inline pull-xs-right", role: 'search') do %>
<%= text_field_tag :search, nil, :placeholder => "Search By lastname", class: 'form-control' %>
<%= submit_tag 'Search', name: nil, class: "btn btn-success-outline" %>
<% end %>
<h1>Registered Doctors</h1>
<table class="table table-striped">
  <thead class="thead-inverse">
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Phone</th>
      <th>Address</th>
      <th>Consultation Fee</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.firstname %></td>
        <td><%= doctor.lastname %></td>
        <td><%= doctor.phone %></td>
        <td><%= doctor.address %></td>
        <td><%= doctor.consultation %></td>
        <td><%= doctor.user_id %></td>
        <td><%= link_to 'View', doctor, class: 'btn btn-success align' %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor), class: 'btn btn-primary align' %></td>
      <% if current_user.admin? %>  <td><%= link_to 'Delete', doctor, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td> <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="form-group row">
  <div class="col-sm-10">
    <%= link_to 'New Doctor Record', new_doctor_path,  class: 'btn btn-primary align' %>
  </div>
</div>
